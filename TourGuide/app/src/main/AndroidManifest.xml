<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tour_guide">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".SlangActivity"
            android:label="@string/category_slang">

        </activity>

        <activity
            android:name=".PlacesActivity"
            android:label="@string/category_tourist_places">
        </activity>

        <activity
            android:name=".MuseumsActivity"
            android:label="@string/category_museums">

        </activity>
        <activity
            android:name=".RestaurantsActivity"
            android:label="@string/category_restaurants">

        </activity>

        <activity android:name=".MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>